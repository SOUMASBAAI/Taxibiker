# Configuration de production pour PlanetHoster
APP_ENV=prod
APP_DEBUG=false

# Clé secrète de l'application (à changer en production)
APP_SECRET=your_production_secret_key_here

# Configuration de la base de données MySQL PlanetHoster
# Format: mysql://username:password@host:port/database_name?serverVersion=8.0&charset=utf8mb4
DATABASE_URL=mysql://your_db_user:your_db_password@your_db_host:3306/your_db_name?serverVersion=8.0&charset=utf8mb4

# Configuration JWT
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your_jwt_passphrase_here

# Configuration CORS pour le frontend
CORS_ALLOW_ORIGIN=^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$|^https://your-domain\.com$

# Configuration Twilio pour WhatsApp (si utilisé)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Numéro WhatsApp de l'admin pour recevoir les notifications
ADMIN_WHATSAPP_NUMBER=whatsapp:+33123456789

# Configuration email pour mot de passe oublié
# Exemple avec PlanetHoster : smtp://your_email%40your-domain.com:your_password@mail.planethoster.com:587
# Exemple avec Gmail : smtp://your_email%40gmail.com:your_app_password@smtp.gmail.com:587
MAILER_DSN=smtp://your_email%40your-domain.com:your_password@mail.planethoster.com:587

# Timezone
TIMEZONE=Europe/Paris

# Configuration de cache (Redis si disponible sur PlanetHoster)
# REDIS_URL=redis://localhost:6379
